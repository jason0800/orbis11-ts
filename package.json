{
  "name": "orbis11",
  "author": "Mapelis Ltd",
  "description": "file structure visualiser",
  "private": true,
  "version": "1.0.0-beta",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron .",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:mac": "npm run build && electron-builder --mac --arm64"
  },
  "build": {
    "appId": "orbis11",
    "files": [
      "src/electron",
      "dist-react"
    ],
    "mac": {
      "icon": "orbis11-icon-mac.icns",
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "win": {
      "icon": "orbis11-icon.png",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "orbis11-icon.ico",
      "uninstallerIcon": "orbis11-icon.ico",
      "uninstallDisplayName": "orbis11-uninstaller",
      "license": "license.md",
      "allowToChangeInstallationDirectory": false
    }
  },
  "dependencies": {
    "@xyflow/react": "^12.7.1",
    "fs-extra": "^11.3.0",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.2.0",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^7.0.3",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "vite": "^7.0.0"
  }
}
